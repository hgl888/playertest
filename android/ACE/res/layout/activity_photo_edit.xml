<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rel_relyout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/photo_edit_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view_vv01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#80000000" />

            <View
                android:id="@+id/photo_edit_square"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/squar_shape" />

            <View
                android:id="@+id/view_vv02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#80000000" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/photo_edit_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#33000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/photo_edit_cancle_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="32dp"
            android:text="@string/text_cancel"
            android:textColor="@drawable/photo_edit_txt_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/photo_edit_submit_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="right|center_vertical"
            android:paddingRight="32dp"
            android:text="@string/text_choice"
            android:textColor="@drawable/photo_edit_txt_color"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>