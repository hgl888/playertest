<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@color/color_white"
    android:minHeight="64dip">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fresco_anchors_head"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        fresco:failureImage="@drawable/head_online"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/head_online"
        fresco:placeholderImageScaleType="centerInside"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_anchors_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/fresco_anchors_head"
        android:layout_marginLeft="10dip"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="@dimen/anchors_list_item_nickname_size" />

    <TextView
        android:id="@+id/tv_user_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fresco_anchors_head"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-12dip"
        android:layout_marginRight="10dip"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="@color/color_a7a7a8"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="8dip"
        android:visibility="gone"
        android:background="@color/color_e6e6eb" />
</RelativeLayout>