<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="370dp"
    android:background="@drawable/dialog_simple_bg">

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/tv_report_bg"
        android:gravity="center"
        android:text="@string/tv_reprot"
        android:textColor="@color/color_19191a"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/tv_report_bg"
        android:gravity="center"
        android:text="@string/tv_home"
        android:textColor="@color/color_19191a"
        android:textSize="13sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/icon_anchor"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@drawable/head_online"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_anchor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/color_19191a"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:textColor="@color/color_5f6060"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:maxLines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_5f6060"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_fans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_signature"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5f6060"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/color_19191a" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5f6060"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_subscribe"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:layout_below="@+id/ll_fans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tv_subscribe_bg"
        android:gravity="center"
        android:textColor="@color/color_19191a"
        android:textSize="18sp" />

</RelativeLayout>