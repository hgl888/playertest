<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f9f9f9"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/layout_title_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_center_level_height"
            android:visibility="gone"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_account_center_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/account_center_level_text_margin"
                android:layout_marginTop="@dimen/account_center_level_text_margin"
                android:text="@string/level_"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <RelativeLayout
                android:id="@+id/rl_account_center_level_img"
                android:layout_width="@dimen/account_center_level_img_width"
                android:layout_height="@dimen/account_center_level_img_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/account_center_level_info_bg_margin"
                android:layout_toRightOf="@id/tv_account_center_level"
                android:background="@drawable/img_account_center_level_bg"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_account_center_level_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lv"
                    android:textSize="@dimen/account_center_level_text_size"
                    android:textColor="@color/color_white"
                    android:layout_alignBottom="@+id/tv_account_center_level_num"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_account_center_level_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_toRightOf="@id/tv_account_center_level_num_text"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/account_center_level_info_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/rl_account_center_level_img"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/rl_account_center_level_img"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/account_center_level_info_top_margin"
                        android:text="@string/level_info"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/account_center_level_explain" />

                    <TextView
                        android:id="@+id/tv_account_center_level_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="@dimen/account_center_level_info_top_margin"
                        android:text="0"
                        android:textColor="@color/color_fa0000"
                        android:textSize="@dimen/account_center_level_explain" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/account_center_level_info_top_margin"
                        android:text="@string/experience"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/account_center_level_explain" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/more_talk"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/account_center_level_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/more_consume"
                    android:textColor="@color/color_7f7f7f"
                    android:textSize="@dimen/account_center_level_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_account_center_coin_recharge"
            style="@style/my_fragment_item_style"
            android:layout_marginTop="@dimen/my_fragment_item_gap">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentTop="true"
                android:background="@color/color_e6e6eb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/coin_balance"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <TextView
                android:id="@+id/tv_account_center_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:text="@string/recharge"
                android:textColor="@drawable/xml_account_center_recharge_color"
                android:textSize="@dimen/my_fragment_item_text_size" />
            <View
                android:layout_width="@dimen/one_px"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@color/color_e6e6eb"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/tv_account_center_recharge"/>
            <TextView
                android:id="@+id/tv_account_center_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:layout_toLeftOf="@id/tv_account_center_recharge"
                android:textColor="@color/color_7f7f7f"
                android:text="0"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_account_center_recharge_records"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/recharge_records"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_account_center_consumption_records"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/consumption_records"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>