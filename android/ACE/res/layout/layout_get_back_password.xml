<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px"
        android:layout_marginTop="@dimen/get_back_password_edit_margin_top"
        android:background="@color/color_e6e6eb" />

    <EditText
        android:id="@+id/et_get_back_password_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_fragment_edit_height"
        android:layout_marginLeft="@dimen/get_back_password_edit_margin_left"
        android:background="@null"
        android:drawableLeft="@drawable/img_user_name"
        android:drawablePadding="@dimen/get_back_password_edit_img_padding"
        android:gravity="center_vertical"
        android:hint="@string/please_input_phone_num"
        android:inputType="number"
        android:maxLength="11"
        android:paddingBottom="@dimen/my_fragment_edit_padding"
        android:paddingTop="@dimen/my_fragment_edit_padding"
        android:textColorHint="@color/color_a8a8a9"
        android:textSize="@dimen/get_back_password_edit_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px"
        android:background="@color/color_e6e6eb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_fragment_edit_height"
        android:layout_marginTop="@dimen/my_fragment_item_gap"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_get_back_password_get_identifying_code"
            android:layout_width="@dimen/get_back_password_identifying_code_width"
            android:layout_height="@dimen/get_back_password_identifying_code_height"
            android:layout_marginLeft="@dimen/get_back_password_edit_margin_left"
            android:background="@drawable/xml_btn_get_identifying_code_bg"
            android:gravity="center"
            android:text="@string/get_identifying_code"
            android:textColor="@color/color_cbe2ff"
            android:textSize="@dimen/get_back_password_identifying_code_text_size" />

        <EditText
            android:id="@+id/et_get_back_password_identifying_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/get_back_password_identifying_code_edit_left_margin"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/please_edit_identifying_code"
            android:maxLength="6"
            android:textColorHint="@color/color_a8a8a9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px"
        android:background="@color/color_e6e6eb" />

    <EditText
        android:id="@+id/et_get_back_password_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_fragment_edit_height"
        android:layout_marginLeft="@dimen/get_back_password_edit_margin_left"
        android:background="@null"
        android:drawableLeft="@drawable/img_password"
        android:drawablePadding="@dimen/get_back_password_edit_img_padding"
        android:gravity="center_vertical"
        android:hint="@string/please_edit_new_passwoed"
        android:maxLength="18"
        android:singleLine="true"
        android:paddingBottom="@dimen/my_fragment_edit_padding"
        android:paddingTop="@dimen/my_fragment_edit_padding"
        android:textColorHint="@color/color_a8a8a9"
        android:textSize="@dimen/get_back_password_edit_text_size" />

    <TextView
        android:id="@+id/tv_get_back_password_identifying_code_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/get_back_password_edit_margin_left"
        android:layout_marginTop="@dimen/get_back_password_edit_margin_left"
        android:text="@string/identifying_code_wrong"
        android:textColor="@color/color_ff0a18"
        android:textSize="@dimen/get_back_password_wrong_text_size"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/get_back_password_btn_height"
        android:layout_marginLeft="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginRight="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginTop="@dimen/get_back_password_btn_top_margin"
        android:background="@drawable/xml_yellow_long_btn_bg"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/color_19191a"
        android:textSize="@dimen/get_back_password_btn_text_size" />
</LinearLayout>