<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recharge_item_height"
    android:background="@drawable/xml_recharge_item_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recharge_item_coin_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_unit"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:textColor="@drawable/xml_recharge_item_bg"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/recharge_item_coin_unit_text_size" />

        <TextView
            android:id="@+id/tv_recharge_item_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/xml_recharge_item_bg"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/recharge_item_coin_text_size"
            android:layout_toLeftOf="@id/tv_recharge_item_coin_unit"
            android:layout_alignBottom="@id/tv_recharge_item_coin_unit"
            android:maxLines="1"
            android:text="0"/>
    </RelativeLayout>

    <View
        android:id="@+id/tv_recharge_item_cut_line"
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/recharge_item_line_margin"
        android:layout_marginTop="@dimen/recharge_item_line_margin"
        android:background="@drawable/xml_recharge_item_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_recharge_item_give"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recharge_item_give_top_margin"
            android:paddingLeft="@dimen/recharge_item_give_left_right_padding"
            android:paddingRight="@dimen/recharge_item_give_left_right_padding"
            android:paddingTop="@dimen/recharge_item_give_top_bottom_padding"
            android:paddingBottom="@dimen/recharge_item_give_top_bottom_padding"
            android:text="每日一次"
            android:textColor="@color/color_white"
            android:visibility="invisible"
            android:background="@drawable/xml_recharge_item_get_bg"/>
        <TextView
            android:id="@+id/tv_recharge_item_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/recharge_item_sum_margin"
            android:textSize="15sp"
            android:textColor="@drawable/xml_recharge_item_bg"
            android:text="￥0"
            android:maxLines="1"
            android:duplicateParentState="true"/>
    </LinearLayout>
</LinearLayout>