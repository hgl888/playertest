<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/color_eeeeee"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_title_bar" />

        <RelativeLayout
            android:id="@+id/rl_setting_account_manager"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/account_manager"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_clean_cache"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/clean_cache"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <TextView
                android:id="@+id/tv_setting_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:text="@string/clean_cache"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_suggestion_feedback"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/suggestion_feedback"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_update_version"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/check_update"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_about"
            style="@style/my_fragment_item_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/about"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_logout"
            android:layout_marginTop="@dimen/my_fragment_item_gap"
            style="@style/my_fragment_item_style">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentTop="true"
                android:background="@color/color_e6e6eb" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_fragment_item_margin"
                android:text="@string/logout"
                android:textColor="@color/color_19191a"
                android:textSize="@dimen/my_fragment_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/my_fragment_item_margin"
                android:src="@drawable/img_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e6e6eb" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>