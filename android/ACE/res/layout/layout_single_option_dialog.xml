<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_single_option_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/account_freeze"
        android:textColor="@color/color_19191a"
        android:textSize="@dimen/simple_dialog_text_size" />

    <TextView
        android:id="@+id/id_single_option_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/account_freeze"
        android:textColor="@color/color_19191a"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px"
        android:background="@color/color_e6e6eb" />

    <Button
        android:id="@+id/id_single_option_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/xml_update_version_dialog_btn_bg"
        android:gravity="center" />
</LinearLayout>