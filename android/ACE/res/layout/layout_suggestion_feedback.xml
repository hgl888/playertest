<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/suggestion_feedback_edit_height"
        android:layout_marginLeft="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginRight="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginTop="@dimen/suggestion_feedback_edit_top_margin"
        android:background="@drawable/xml_suggestion_feedback_edit_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_suggestion_feedback"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/suggestion_feedback_edit_left_right_margin"
            android:layout_marginRight="@dimen/suggestion_feedback_edit_left_right_margin"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="200"
            android:gravity="start"
            android:textSize="15sp"
            android:hint="@string/welcome_to_feedback"
            android:textColorHint="@color/color_a8a8a9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/color_d3d3d5" />

        <EditText
            android:id="@+id/et_suggestion_feedback_contact_way"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_fragment_edit_height"
            android:layout_marginLeft="@dimen/suggestion_feedback_edit_left_right_margin"
            android:layout_marginRight="@dimen/suggestion_feedback_edit_left_right_margin"
            android:background="@null"
            android:maxLength="20"
            android:textSize="15sp"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:hint="@string/your_contact_way"
            android:textColorHint="@color/color_a8a8a9" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit_suggestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/get_back_password_btn_height"
        android:layout_marginLeft="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginRight="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginTop="@dimen/get_back_password_btn_top_margin"
        android:background="@drawable/xml_yellow_long_btn_bg"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/color_black"
        android:textSize="@dimen/get_back_password_btn_text_size" />
</LinearLayout>