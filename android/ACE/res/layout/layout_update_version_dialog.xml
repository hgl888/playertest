<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/img_update_version_dialog_title"
        android:gravity="center">

        <TextView
            android:id="@+id/id_update_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_new_version"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_update_version_dialog_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_update_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="27dp"
            android:text=""
            android:textColor="#896b00"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e6e6eb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <Button
                android:id="@+id/id_update_dialog_left_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_update_version_dialog_btn_bg"
                android:text="@string/text_cancel"
                android:textColor="@color/color_999999" />

            <View
                android:layout_width="@dimen/one_px"
                android:layout_height="@dimen/simple_dialog_button_height"
                android:background="@color/color_e6e6eb" />

            <Button
                android:id="@+id/id_update_dialog_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_update_version_dialog_btn_bg"
                android:text="@string/now_update"
                android:textColor="@color/color_fed130" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>