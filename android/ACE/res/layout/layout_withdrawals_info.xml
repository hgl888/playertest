<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/xml_withdrawals_edit_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="@string/withdrawals_rmb"
                android:layout_centerVertical="true"
                android:textColor="@color/color_9a9a9a"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_withdrawals_rmb_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/color_383838"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="17dp"
                    android:text="@string/yuan"
                    android:textColor="@color/color_383838" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/color_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdrawals_coin"
                    android:textColor="@color/color_9a9a9a" />

                <TextView
                    android:id="@+id/tv_withdrawals_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="15个"
                    android:textColor="@color/color_383838"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdrawals_account"
                    android:textColor="@color/color_9a9a9a" />

                <TextView
                    android:id="@+id/tv_withdrawals_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="15个"
                    android:textColor="@color/color_383838"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdrawals_wechat"
                    android:textColor="@color/color_9a9a9a" />

                <TextView
                    android:id="@+id/tv_withdrawals_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="15个"
                    android:textColor="@color/color_383838"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/regist_edit_height"
        android:layout_marginTop="12dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:layout_alignParentTop="true"
            android:background="@color/color_cccccc" />

        <ImageView
            android:id="@+id/img_bind_wechat_user"
            android:layout_width="@dimen/login_edit_img_width"
            android:layout_height="@dimen/login_edit_img_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/regist_edit_left_margin"
            android:src="@drawable/img_user_name" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_383838"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/regist_edit_left_margin"
            android:layout_toRightOf="@id/img_bind_wechat_user"
            android:textSize="@dimen/regist_edit_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/regist_edit_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/regist_edit_left_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_withdrawal_get_identifying_code"
                android:layout_width="@dimen/regist_get_identifying_code_btn_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/regist_get_identifying_code_btn_margin"
                android:layout_marginTop="@dimen/regist_get_identifying_code_btn_margin"
                android:background="@drawable/xml_btn_get_identifying_code_bg"
                android:text="@string/get_identifying_code"
                android:textColor="@color/color_cbe2ff" />

            <EditText
                android:id="@+id/et_withdrawal_identifying_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/regist_get_identifying_code_edit_left_margin"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_edit_identifying_code"
                android:maxLength="6"
                android:inputType="number"
                android:textColorHint="@color/color_a8a8a9"
                android:textSize="@dimen/regist_edit_text_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_cccccc" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/get_back_password_btn_height"
        android:layout_marginLeft="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginRight="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginTop="52dp"
        android:background="@drawable/xml_yellow_long_btn_bg"
        android:text="@string/commit_withdrawals"
        android:textSize="@dimen/get_back_password_btn_text_size" />

    <Button
        android:id="@+id/btn_return_input_withdrawal_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/get_back_password_btn_height"
        android:layout_marginLeft="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginRight="@dimen/get_back_password_btn_left_right_margin"
        android:layout_marginTop="12dp"
        android:background="@drawable/xml_yellow_long_btn_bg"
        android:text="@string/input_again"
        android:visibility="gone"
        android:textSize="@dimen/get_back_password_btn_text_size" />
</LinearLayout>