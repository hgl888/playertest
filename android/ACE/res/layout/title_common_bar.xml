<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffd200" >

    <TextView
        android:id="@+id/tv_normal_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hall_title_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:background="@drawable/transparent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_hall_title_anim"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@drawable/img_hall_title_btn_bg"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:enabled="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hall_title"
        android:layout_width="@dimen/hall_title_btn_width"
        android:layout_height="@dimen/hall_title_btn_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:background="@drawable/transparent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_hot_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/hall_hot_text"
            android:textColor="@drawable/xml_hall_title_text_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_subscribe_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/hall_subscribe_text"
            android:textColor="@drawable/xml_hall_title_text_color"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:contentDescription="@string/title_search_btn_description"
        android:src="@drawable/selector_search_btn" />

</RelativeLayout>